#include <iostream>
using namespace std ;
int main(void){
    int counst_time[27]={},time=1;
    char in_line[100],
         letter_26[2][27]={"ABCDEFGHIJKLMNOPQRSTUVWXYZ","abcdefghijklmnopqrstuvwxyz"};
    cin.getline(in_line,100);
    for (int i=0;in_line[i] != '\0';i++){
        for(int j=0;j<26;j++){        
            if(in_line[i]==letter_26[0][j] or in_line[i]==letter_26[1][j]){
            counst_time[j]=counst_time[j]+1;
            }                                                                  
        }
        if(in_line[i] == ' '){
            time++;
        }
    }
    if(in_line[0] == ' '){
            time--;}
    cout<<time<<endl;
    for (int i=0;i<26;i++){
        if(counst_time[i] != 0){
            cout<<letter_26[1][i]<<" : "<<counst_time[i]<<endl;
        }
    }
return 0;
}
